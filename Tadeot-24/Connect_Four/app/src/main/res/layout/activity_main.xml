<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect Four"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TableLayout
        android:id="@+id/boardTableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleTextView"
        android:layout_marginTop="8dp">

        <!-- Dynamisch generierte Zeilen und Spalten -->

    </TableLayout>

    <Button
        android:id="@+id/restartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/boardTableLayout"
        android:layout_marginTop="8dp"
        android:text="Restart"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/winnerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/restartButton"
        android:layout_marginTop="8dp"
        android:text=""
        android:textSize="12sp"
        android:textStyle="italic"
        android:visibility="invisible" />


    <Button
        android:id="@+id/player1Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:visibility="invisible"/>

    <!-- Spieler 2 Hintergrund -->
    <Button
        android:id="@+id/player2Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:visibility="invisible" />


</RelativeLayout>
